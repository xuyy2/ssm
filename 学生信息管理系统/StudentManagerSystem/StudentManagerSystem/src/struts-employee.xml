<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
  <package name="employee" namespace="/employee" extends="default">	   
    
	<action name="loginAction" class="employeeAction" method="login" >
	    <result name="admin" type="dispatcher">/jsp/admin/index.jsp</result>
	    <result name="input">/login.jsp</result>
    </action> 
    
	<action name="deleteAction" class="employeeAction" method="delete" >
	    <result name="delete" type="dispatcher">/jsp/admin/index.jsp</result>
	    <result name="input">/login.jsp</result>
    </action> 
    
	<action name="updateAction" class="employeeAction" method="update" >
	    <result name="update" type="dispatcher">/jsp/admin/index.jsp</result>
	    <result name="input">/login.jsp</result>
    </action> 
    
<!--     <action name="listAction" class="employeeAction" method="list">
    	<result name="success" type="dispatcher">/jsp/admin/empList.jsp</result>
    </action>
 -->
  </package>
  
	
	
</struts>
