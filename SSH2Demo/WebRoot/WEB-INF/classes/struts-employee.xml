<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
  <package name="employee" namespace="/employee" extends="default">	   
    
	<action name="loginAction" class="employeeAction" method="login">
	    <result name="admin" type="dispatcher">/jsp/admin/index.jsp</result>
	    <result name="manager" type="dispatcher">/jsp/manager/index.jsp</result>
	    <result name="deptManager" type="dispatcher">/jsp/deptManager/index.jsp</result>
	    <result name="cashier" type="dispatcher">/jsp/cashier/index.jsp</result>
	    <result name="employee" type="dispatcher">/jsp/employee/index.jsp</result>
	    <result name="input">/login.jsp</result>
    </action> 
    
    <action name="listAction" class="employeeAction" method="list">
    	<result name="success" type="dispatcher">/jsp/admin/empList.jsp</result>
    </action>

  </package>
	
	
</struts>
